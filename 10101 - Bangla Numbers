#include<iostream>
#include<vector>
#include<algorithm>
#include<string>
#include<map>
#include<math.h>
#include<sstream>
using namespace std;

int bangla(long long int num) {
	if (num >= 10000000) {
		bangla(num / 10000000);
		cout << " kuti";
		num %= 10000000;
	}
	if (num >= 100000) {
		bangla(num / 100000);
		cout << " lakh";
		num %= 100000;
	}
	if (num >= 1000) {
		bangla(num / 1000);
		cout << " hajar";
		num %= 1000;
	}
	if (num >= 100) {
		bangla(num / 100);
		cout << " shata";
		num %= 100;
	}
	if (num) {
		cout << " " << num;
	}
	return num;
}
int main() {
	long long int num;
	int a = 1;
	while (cin >> num) {
		cout << a << ". ";
		bangla(num);
		cout << endl;
		a++;
	}
}
