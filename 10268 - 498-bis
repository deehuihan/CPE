#include<iostream>
#include<vector>
#include<algorithm>
#include<string>
#include<map>
#include<math.h>
#include<sstream>
using namespace std;

int main() {
	int n, ia;
	while (cin >> n) {
		string s;
		stringstream ss;
		getline(cin, s);
		getline(cin, s);
		ss << s;
		int count = 0;
		while (ss >> ia) {
			count++;
		}
		ss.clear();
		ss << s;
		ss >> ia;
		int answer = 0;
		answer = ia * (count - 1);
		while (ss >> ia) {
			count--;
			answer = answer * n + ia * (count - 1);
		}
		answer = (answer - ia * (count - 1)) / n;
		cout << answer << endl;
	}
}
