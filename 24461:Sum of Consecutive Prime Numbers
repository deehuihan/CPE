#include <iostream>
#include<vector>
using namespace std;
int main()
{
    //先創建好一個從 0~n 其中的prime number array，要記得 i和j =2 開始，同時 <=n 和 <=i/2
//之後再用一個 for loop i 和 j 來看vec[j]一直連續加總多少會等於 n, 在 j 裡面使用 sum<=n 是因為 j=i 的話， j 會一直比之前還要大數目，如果這時候 sum已經是=n 
//那就表示j再往後面一定比n還要大值，就可以排除了.
    vector<int> vec;
    for(int i=2;i<=n;i++){
        bool prime=true;
        for(int j=2;j<=i/2;j++){
            if(i%j==0){
                prime=false;
            }
        }
        if(prime){
            vec.push_back(i);
        }
    }
    // for(int i=0;i<vec.size();i++){
    //     cout<<vec[i]<<" ";
    // }
    cout<<endl;
    int n;
    while(cin>>n){
        if(n==0){
            break;
        }
        int count=0;
        for(int i=0;vec[i]<=n;i++){
            int sum=0;
            for(int j=i;sum<=n;j++){
                sum+=vec[j];
                if(sum==n){
                    count++;
                    break;
                }
            }
        }
        cout<<count<<endl;
    }
}
