// 10409 - Die Game.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;
int main()
{
	int n;
	string s1;
	while (cin >> n) {
		if (n == 0) {
			break;
		}
		int t,top = 1, north = 2, west = 3, east = 4, south = 5, down = 6;
		for (int i = 0; i < n; i++) {
			cin >> s1;
			if (s1 == "north") {
				t = top;
				top = south;
				south = down;
				down = north;
				north = t;
			}
			if (s1 == "west") {
				t = top;
				top = east;
				east = down;
				down = west;
				west = t;
			}
			if (s1 == "south") {
				t = top;
				top = north;
				north = down;
				down = south;
				south = t;
			}
			if (s1 == "east") {
				t = top;
				top = west;
				west = down;
				down = east;
				east = t;
			}
		}
		cout << top << endl;
	}
}

// Run program: Ctrl + F5 or Debug > Start Without Debugging menu
// Debug program: F5 or Debug > Start Debugging menu

